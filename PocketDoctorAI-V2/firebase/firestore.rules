rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() { return request.auth != null; }
    function isOwner(userId) { return isAuthenticated() && request.auth.uid == userId; }
    function isRecentTimestamp(timestamp) { return timestamp > request.time - duration.value(1, 'h'); }
    function hasRequiredFields(fields) { return request.resource.data.keys().hasAll(fields); }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && hasRequiredFields(['createdAt','settings']) && request.resource.data.createdAt is timestamp;
      allow update: if isOwner(userId) && request.resource.data.userId == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['createdAt']);
      allow delete: if isOwner(userId);
    }

    match /reports/{reportId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid
        && hasRequiredFields(['userId','mode','analysis','createdAt'])
        && request.resource.data.mode in ['allopathy','ayurveda','mixed']
        && request.resource.data.createdAt is timestamp
        && isRecentTimestamp(request.resource.data.createdAt);
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid
        && request.resource.data.userId == request.auth.uid
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['createdAt','userId']);
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    match /sharedReports/{shareId} {
      allow read: if resource.data.expiresAt > request.time && resource.data.active == true;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid
        && hasRequiredFields(['ownerId','reportId','expiresAt','createdAt'])
        && request.resource.data.expiresAt > request.time
        && request.resource.data.expiresAt < request.time + duration.value(7, 'd');
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    match /analytics/{eventId} {
      allow read: if false;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid && request.resource.data.timestamp is timestamp;
    }

    match /auditLogs/{logId} {
      allow read: if isAuthenticated() && request.auth.token.admin == true;
      allow write: if false;
    }

    match /{document=**} { allow read, write: if false; }
  }
}
